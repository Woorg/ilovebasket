// General body styles

.in
	margin auto
	padding-left 15px
	padding-right 15px
	max-width 1170px
	width 100%

.page
	background-color #ffffff
	// display flex
	// flex-direction column
	// min-height 100vh
	font-display swap
	font-family $p
	font-weight normal
	font-size 16px
	color #313131


// Sticky footer
.main
	flex 1 0 auto

// Title

.title 
	font-size 50px
	font-family $pS
	font-weight 600
	letter-spacing 0.45px
	line-height 1.44
	+r($t)
		font-size 32px
		letter-spacing 0.29px

	&_biggest
		font-size 55px
		line-height 1.3
		letter-spacing 0.5px
		+r($tM)
			font-size 32px
			letter-spacing 0.25px

// Image

.image
	&_left
		text-align left
	&_right
		text-align right
	img
		respimg()


// Buttons

.button
	position relative
	border none
	height 50px
	display flex
	background-color #db501d
	text-align center
	color #ffffff
	font-family $pS
	font-size 19px
	font-weight 600
	letter-spacing 0.12px
	border-radius 4px
	+r($t)
		font-size 16px
	&:after
		position absolute
		top 0
		left 0
		right 0
		bottom 5px
		background-color #fc5c21
		line-height 50px
		border-radius 4px
		tr(background-color .3s ease)
	&_form
		&:after
			content attr(value)
	&_link
		&:after
			content attr(data-text)
	&:hover
		&:after
			background-color #db501d
			tr(background-color .3s ease)




.wysiwyg
	color #313131
	h2,
	h3
		margin-bottom 19px
		font-size 50px
		font-family $pS
		font-weight 600
		line-height 1.44
		letter-spacing 0.45px
		
	p
		margin-bottom 16px
		font-weight 400
		font-size 16px
		line-height 1.75
		letter-spacing 0.1px
		&:last-child
			margin-bottom 0

	blockquote
		border-left 2px solid #c42141
		margin-bottom 57px
		padding-left 54px
		font-style italic
		font-size 16px
		font-weight 500
		line-height 1.5
		letter-spacing .16px

	ol,
	ul
		margin-left 19px
		margin-bottom 40px
	li
		position relative
		padding-left 40px
		margin-bottom 16px
		font-size 24px
		font-weight 400
		line-height 1.25
		letter-spacing .24px
		&:after
			position absolute
			top 50%
			left 0
			content ""
			width 10px
			height 10px
			background-color #c42141
			transform translateY(-50%)
	table
		// margin-bottom 45px
		font-size 24px
		font-weight 500
		line-height 1.25
		letter-spacing .24px
	
		th,
		td
			padding 14px 34px 14px 26px
		th
			border 2px solid #fff
			background-color #c42141
			color #fff
		td
			border 2px solid #bfbfbf
			background-color #f4f4f4


